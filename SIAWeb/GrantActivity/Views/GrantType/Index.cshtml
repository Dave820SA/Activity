@model IEnumerable<GrantBusinessLayer.Grant_GrantType>

@{
    ViewBag.Title = "Grant Type";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12 ">
           <span class="h5">@Html.ActionLink("Create New", "Create")&nbsp;&nbsp;</span>
           @*|&nbsp;&nbsp;</span><span class="h6">@Html.ActionLink("Admin", "Admin", "Home")</span>*@
            <table class="table table-condensed table-hover" >
                <tr>
                    <th>
                       @* @Html.ActionLink("SOP", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })*@
                       @Html.DisplayNameFor(model => model.GrantType)
                    </th>
                   
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td >
                            @Html.DisplayFor(modelItem => item.GrantType)
                        </td>
                        
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.GrantTypeID }) | @Html.ActionLink("Details", "Details", new { id = item.GrantTypeID })
                            |
                            @Html.ActionLink("Delete", "Delete", new { id = item.GrantTypeID })
                        </td>
                    </tr>
                }
            </table>
            <br />
           @* Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index",
                    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))*@
        </div>
    </div>
</div>

