<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bootstrap/css/Sandstone.css")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="jumbotron">
                    <h1>
                        @Html.ActionLink("Grant Activity Reporting", "Index", "Home")</h1>
                    <p>
                        The San Antonio Police Department’s Grant Activity Reporting provides the Department’s members with
                        quick access to enter Grant related activity.
                    </p>
                    <p>
                        <ul class="nav nav-pills">
                            <li class="active"><a href="~/Home/Index"><span class="fa fa-home fa-fw"></span>Home
                            </a></li>
                            <li><a href="~/Category/Index"><i class="fa fa-search"></i> Categories </a></li>
                            <li><a href="~/Daily/Index"><i class="fa fa-search"></i> Reporting </a></li>
                            <li><a href="~/Home/Contact"><i class="fa fa-phone"></i> Contact </a></li>
                            <li><a href="~/Home/Admin"><i class="fa fa-user-circle"></i> Admin </a></li>
                        </ul>
                    </p>
                </div>
                @RenderBody()
                <hr />
            </div>
        </div>
    </div>

    
        <footer>
            <div class="content-wrapper" style="margin-top: 20px">
                <div class="float-left">
                    <p class="text-center">&copy; @DateTime.Now.Year - Activity App - Created by: D.Davidson#1341 & John Riojas</p>
                </div>
            </div>
      </footer>
 
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
        @Scripts.Render("~/bootstrap/js/bootstrap.min.js")
        @RenderSection("scripts", required: false)
</body>
</html>
