@model GrantBusinessLayer.Grant_Activity


@{
    ViewBag.Title = "Edit";
}

<div style="padding-left: 5px">
    <h3>
        Edit<small> Activity</small></h3>
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <form class="form-horizontal">
    <div class="Container">
        <div class="row">
            <div class="col-sm-6">
                <fieldset class="scheduler-border">
                    
                    @Html.HiddenFor(model => model.ActivityID)
                    @Html.HiddenFor(model => model.DailyID)
                   
                     <div class="form-group col-xs-12">
                         <strong style="font-size:1.2em">@Html.LabelFor(model => model.CategoryID, new { @class = "control-label" })</strong>
                        @Html.DropDownList("CategoryID", null, "Select Item", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                    </div>
                     <div class="form-group col-xs-12">
                         <strong style="font-size: 1.2em">@Html.LabelFor(model => model.Notes, new { @class = "control-label" })</strong>
                        @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", cols = "20", rows = "7" })
                        @*@Html.ValidationMessageFor(model => model.ModifiedDate, "", new { @class = "text-danger" })*@
                    </div>
                    @Html.HiddenFor(model => model.EnteredDate, new { @Value = @DateTime.Now.ToString() })
                    @Html.HiddenFor(model => model., new { @Value = @DateTime.Now.ToString() })
                      <div class="form-group col-xs-12">
                        <input type="submit" class="btn btn-success" value="Submit" />
                        <br />
                        <br />
                        
                        <a href="@Url.Action("Details", "Daily", new { id = Model.DailyID })" class="btn btn-warning btn-sm"> Back To List <i class="fa fa-share" aria-hidden="true"></i></a>
                    </div>
                </fieldset>
                
            </div>
        </div>
    </div>
    </form> 
}     

