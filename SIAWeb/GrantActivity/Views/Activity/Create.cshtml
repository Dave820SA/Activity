@model GrantBusinessLayer.Grant_Activity

@{
    ViewBag.Title = "Create";
}

<div style="padding-left: 5px">
    <h3>
        Create <small>New Activity</small></h3>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
  <form class="form-horizontal">
    <div class="Container">
        <div class="row">
            <div class="col-sm-6">
                <fieldset class="scheduler-border">
                    @Html.HiddenFor(model => model.DailyID, new { @Value = @ViewBag.DailyID })
                    @Html.HiddenFor(model => model.EnteredDate, new { @Value = @DateTime.Now.ToString() })
                    <div class="form-group col-xs-12">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Grant_Category.Name)
                        </div>
                        <div class="editor-label">
                            @Html.DropDownList("CategoryID", null, "Select Category", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <strong style="font-size: 1.2em">@Html.LabelFor(model => model.Notes, new { @class = "control-label" })</strong>
                        @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", cols = "20", rows = "7" })
                       @* @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })*@
                    </div>
                    <div class="form-group col-xs-12">
                        <input type="submit" class="btn btn-success" value="Submit" />
                        <br />
                        <br />
                        <a href="@Url.Action("Details", "Daily", new { id = @ViewBag.DailyID })" class="btn btn-warning btn-sm">
                            Back To List <i class="fa fa-share" aria-hidden="true"></i></a>
                    </div>
                </fieldset>
            </div>
        </div>
    </div>
    </form>
   
}

@section Scripts {

   <script type="text/javascript">
       $(document).ready(function () {

       });
    </script>

}


