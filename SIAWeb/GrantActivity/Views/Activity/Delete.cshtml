@model GrantBusinessLayer.Grant_Activity

@{
    ViewBag.Title = "Delete";
}
<div style="padding-left: 5px">
    <h3>
        Delete<small> Activity</small></h3>
</div>

@using (Html.BeginForm()) {

<form class="form-horizontal">
    <div class="Container">
        <div class="row">
            <div class="col-sm-6">
                <fieldset class="scheduler-border">
                    <h4 class="text-danger">
                        Are you sure you want to delete this Activity?</h4>
                    <br />
                     @Html.HiddenFor(model => model.ActivityID)
                    @Html.HiddenFor(model => model.DailyID)
                   
                     <div class="form-group col-xs-12">
                         <strong style="font-size:1.2em">@Html.LabelFor(model => model.CategoryID, new { @class = "control-label" })</strong>
                        @Html.TextBoxFor(model => model.Grant_Category.Name, new { @class = "form-control" })
                       
                    </div>
                     <div class="form-group col-xs-12">
                         <strong style="font-size: 1.2em">@Html.LabelFor(model => model.Notes, new { @class = "control-label" })</strong>
                        @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", cols = "20", rows = "7" })
                        
                    </div>
                    <div class="form-group col-xs-12">
                     <input type="submit" class="btn btn-danger btn-sm" value="Delete" />
                        <br />
                        <br />
                        <a href="@Url.Action("Details", "Daily", new { id=Model.DailyID })" class="btn btn-warning btn-sm"> Back To List <i class="fa fa-share" aria-hidden="true"></i></a>
                    </div>
                </fieldset>
               @* <div>
                    <p>
                        <input type="submit" class="btn btn-danger" value="Delete" />
                        <strong style="font-size: 1.2em">| @Html.ActionLink("Back", "Details", "Daily", new { id=Model.DailyID }, null)</strong>
                    </p>
                </div>*@
            </div>
        </div>
    </div>
</form>
}


