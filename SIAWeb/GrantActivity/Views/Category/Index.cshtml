                    <th>
                       @* @Html.ActionLink("SOP", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })*@
                       @Html.DisplayNameFor(model => model.Activity)
                    </th>
                   
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td >
                            @Html.DisplayFor(modelItem => item.Activity)
                        </td>
                        
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ActivityID }) | <strong>@Html.ActionLink("Details", "Details", new { id = item.ActivityID })</strong>
                            |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ActivityID })
                        </td>
                    </tr>
                }
            </table>
            <br />
           @* Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index",
                    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))*@
        </div>
    </div>
</div>

