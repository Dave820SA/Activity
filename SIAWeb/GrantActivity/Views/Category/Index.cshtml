    Layout = "~/Views/Shared/_Alternate.cshtml";
}

@model IEnumerable<GrantReportingBusinessLayer.ActivityCategory>

@{
    ViewBag.Title = "Reporting Categories";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12 ">
            @*<span class="h6">@Html.ActionLink("Upload New", "FileUpload")&nbsp;&nbsp;|&nbsp;&nbsp;</span>*@
            @*<span class="h6">@Html.ActionLink("Admin", "Admin", "Home")</span>*@
