@model GrantBusinessLayer.Grant_Category


@{
    ViewBag.Title = "Create";
}

<div style="padding-left: 5px">
    <h4>
        Create <small>New Grant Activity Category</small></h4>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    
  <form class="form-horizontal">
    <div class="Container">
        <div class="row">
            <div class="col-sm-6">
                <fieldset class="scheduler-border">
                    
                    <div class="form-group col-xs-12">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Name)
                        </div>
                        <div class="editor-label">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                   
                    <div class="form-group col-xs-12">
                        <input type="submit" class="btn btn-success" value="Submit" />
                        <br />
                        <br />
                        <a href="@Url.Action("Index", "Category")" class="btn btn-warning btn-sm"> Back To List <span class="glyphicon glyphicon-share-alt"></span></a>
                    </div>
                </fieldset>

                
            </div>
        </div>
    </div>
    </form>
   
}

@section Scripts {

   <script type="text/javascript">
       $(document).ready(function () {

       });
    </script>

}
