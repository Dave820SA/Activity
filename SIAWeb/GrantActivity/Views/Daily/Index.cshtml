@model IEnumerable<GrantBusinessLayer.Grant_Daily>


@{
    ViewBag.Title = "View Activity";
}


<div class="row">
    <div class="col-md-3">
        <strong style="font-size:1.8em; padding-left:10px">Entered Activity</strong>
    </div>
    <div class="col-md-9">
        <div style="float: right">
            @using (Html.BeginForm("Index", "Daily", FormMethod.Post))
            { 
                <strong style="font-size: 1.2em;">Sort By:&nbsp; &nbsp;</strong>
            
                @Html.RadioButton("Answer", "Last30", new { onchange = "this.form.submit();" }) <span>Last
                    30 Days |</span>
                @Html.RadioButton("Answer", "Approve", new { onchange = "this.form.submit();" }) <span>Approved
                    |</span>
                @Html.RadioButton("Answer", "NotApprove", new { onchange = "this.form.submit();" }) <span>Not
                    Approved |</span>
                @Html.RadioButton("Answer", "MoreInfo", new { onchange = "this.form.submit();" }) <span>More
                    Info |</span>
                @Html.RadioButton("Answer", "All", new { onchange = "this.form.submit();" }) <span>All
                    &nbsp; &nbsp;</span> 
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12 ">
            
            <a href="@Url.Action("Create", "Daily")" class="btn btn-warning btn-xs"> Add New Entry <i class="fa fa-plus-square" aria-hidden="true"></i></a>
           
            <table class="table table-condensed table-hover">
                <tr>
                   
                    <th>
                        @Html.DisplayNameFor(model => model.Grant_GrantType.GrantType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DailyStart)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DailyEnd)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnteredDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ApprovedFlag)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MoreInformationFlag)
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    @Html.HiddenFor(modelItem => item.AppEntityID)
                    <tr>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Grant_GrantType.GrantType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DailyStart)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DailyEnd)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EnteredDate)
                        </td>
                        <td style="max-height: 10px">
                            @{
                    string approve = (item.ApprovedFlag).ToString();
                    if (approve == "True")
                    {
                                <img src="~/Images/Check_Round.png" alt="" class="image_background" />
                    }
                    else
                    {
                                <img src="~/Images/red-minus.png" alt="" class="image_background" />
                    } }
                        </td>
                        <td>
                            @{
                    string moreinfo = (item.MoreInformationFlag).ToString();

                    if (moreinfo == "True")
                    {
                                <img src="~/Images/Check_Round.png" alt="" class="image_background" />
                    }
                    else
                    {
                                <img src="~/Images/red-minus.png" alt="" class="image_background" />
                    } }
                        </td>
                        <td>
                            
                            
                            <a href="@Url.Action("Edit", "Daily", new { id = item.AdminDailyID })" class="btn btn-info btn-xs"> Edit <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> |
                            <a href="@Url.Action("Details", "Daily", new { id = item.AdminDailyID })" class="btn btn-success btn-xs"> Details <i class="fa fa-list" aria-hidden="true"></i></a> |
                            <a href="@Url.Action("Delete", "Daily", new { id = item.AdminDailyID })" class="btn btn-danger btn-xs"> Delete <i class="fa fa-times-circle" aria-hidden="true"></i></a>
                            
                           
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

@section Scripts {

   <script type="text/javascript">
       $(document).ready(function () {

       });

