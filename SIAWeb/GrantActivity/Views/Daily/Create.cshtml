@model GrantReportingBusinessLayer.DailyActivity

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())

{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

  
        <form class="form-horizontal">
    <div class="Container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-1 col-md-6 col-sm-6 col-xs-12">
                <fieldset class="scheduler-border">
                    <div class="editor-field">
                        @Html.HiddenFor(model => model.AppEntityID, new { @Value = @System.Web.HttpContext.Current.Session["AppEntityID"], @class = "form-control" })
                    </div>
                    <div class="form-group col-xs-11 col-md-8">
                        <strong style="font-size: 1.2em">@Html.LabelFor(model => model.ActivityID, new { @class = "control-label" })</strong>
                        @Html.DropDownList("ActivityID", null, "Select Activity", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ActivityID, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-xs-11 col-md-8">
                        <strong style="font-size: 1.2em">@Html.LabelFor(model => model.Notes, new { @class = "control-label" })</strong>
                        @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", cols = "20", rows = "7" })
                        @Html.ValidationMessageFor(model => model.Notes, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-xs-11 col-md-8">
                        <strong style="font-size: 1.2em">@Html.LabelFor(model => model.ActivityStart, new { @class = "control-label" })</strong>
                        @Html.TextBoxFor(model => model.ActivityStart, new { @class = "form-control", mask = "99/99/9999 99:99" })
                        @Html.ValidationMessageFor(model => model.ActivityStart, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-xs-11 col-md-8">
                        <strong style="font-size: 1.2em">@Html.LabelFor(model => model.ActivityEnd, new { @class = "control-label" })</strong>
                        @Html.TextBoxFor(model => model.ActivityEnd, new { @class = "form-control", mask = "99/99/9999 99:99" })
                        @Html.ValidationMessageFor(model => model.ActivityEnd, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group col-xs-11 col-md-8">
                        @Html.HiddenFor(model => model.ApprovedFlag, new { @Value = false, @class = "form-control" })
                        @Html.HiddenFor(model => model.MoreInformationFlag, new { @Value = false, @class = "form-control" })
                        @Html.HiddenFor(model => model.EnteredDate, new { @Value = @DateTime.Now.ToString(), @class = "form-control" })
                    </div>
                    <div class="form-group col-xs-11 col-md-8">
                        <input type="submit" class="btn btn-primary" value="Create" />
                    </div>
                    <p>
                    </p>
                </fieldset>
                <div>
                    <strong style="font-size: 1.5em">| @Html.ActionLink("Back to List", "Index")</strong>
                    @*<button class="btn btn-primary btn-sm" data-target="#emterActivity" data-toggle="modal">Modal</button>*@
                    <a href="#" class="btn btn-primary btn-sm" data-target="#enterActivity" data-toggle="modal">Open Modal</a>
                </div>
                
                <div class="modal fade" id="enterActivity">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button class="close" data-dismiss="modal">
                                    &times;</button>
                                <h4 class="modal-title">
                                    Enter Activity</h4>
                            </div>
                            <div class="modal-body">
                                @*<form>*@
                                <div class="form-group">
                                    <strong style="font-size: 1.2em">@Html.LabelFor(model => model.ActivityEnd, new { @class = "control-label" })</strong>
                                   
                                    @Html.TextBoxFor(model => model.ActivityEnd, new { @class = "form-control", mask = "99/99/9999 99:99" })
                                    @Html.ValidationMessageFor(model => model.ActivityEnd, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.HiddenFor(model => model.ApprovedFlag, new { @Value = false, @class = "form-control" })
                                    @Html.HiddenFor(model => model.MoreInformationFlag, new { @Value = false, @class = "form-control" })
                                    @Html.HiddenFor(model => model.EnteredDate, new { @Value = @DateTime.Now.ToString(), @class = "form-control" })
                                </div>
                                @*</form>*@
                            </div>
                            <div class="modal-footer">
                                <button class="btn btn-primary">Submit</button>
                                <button class="btn btn-primary" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>




            </div>
        </div>
    </div>
    </form>


}


