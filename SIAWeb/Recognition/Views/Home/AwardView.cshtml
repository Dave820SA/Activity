@model IEnumerable<RecognitionBusinessLayer.Award_spRecTypeMonthYear_Result>

@{
    ViewBag.Title = "AwardView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form  class="form-inline">
    <div class="form-group">
        <label class="control-label" for="ddlMonth">
            Select Month &amp; Year &nbsp;&nbsp;
        </label>
        @Html.DropDownList("MonthNbr", (IEnumerable<SelectListItem>)ViewBag.MonthList, "Select Month", new { id = "ddlMonth", @class = "form-control" })

    </div>
    <div class="form-group">
        <label class="sr-only control-label" for="ddlYear">
            Year
        </label>
        @Html.DropDownList("YearNbr", (IEnumerable<SelectListItem>)ViewBag.YearList, "Select Year", new { id = "ddlYear", @class = "form-control" })

    </div>
    <button class="btn-default  btn" type="submit">Submit</button>
    @Html.Hidden("recType")
</form>


<hr />

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12 ">
            
            <h5>@ViewBag.MessageToUser</h5>
            <table class="table table-condensed table-hover" >
                <tr>
                    <th>
                        @Html.ActionLink("Employee", "Search", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        Type
                        @*@Html.ActionLink("Type", "Search", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })*@
                    </th>
                    <th>
                        Award
                        @*@Html.ActionLink("Award", "Search", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })*@
                    </th>
                    <th>
                        @Html.ActionLink("Issued", "Search", new { sortOrder = ViewBag.DateSortParm, currentFilter = ViewBag.CurrentFilter })
                    </th>
                    <th>
                        See More Info
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Type)
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.Award)
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.Office_Office.Code)
                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.IssuedDate)
                        </td>
                        <td>
                          
                            <a href="@Url.Action("Details", "Home", new { id = item.RecognitionId })" class="btn btn-success btn-xs">
                                Details <i class="fa fa-list" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </table>
            <br />
           @* Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Search",
                    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))*@
        </div>
    </div>
</div>

