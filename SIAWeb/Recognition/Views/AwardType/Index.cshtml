@model IEnumerable<RecognitionBusinessLayer.AwardType>

@{
    ViewBag.Title = "Award Type";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12 ">
            @*<span class="h5">@Html.ActionLink("Create New", "Create")&nbsp;&nbsp;</span>*@
            <a href="@Url.Action("Create", "AwardType")" class="btn btn-warning btn-sm">Add
                New Entry <i class="fa fa-plus-square" aria-hidden="true"></i></a>
            <br />
            <br />
            @*|&nbsp;&nbsp;</span><span class="h6">@Html.ActionLink("Admin", "Admin", "Home")</span>*@
            <table class="table table-condensed table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "AwardType", new { id = item.AwardTypeId })" class="btn btn-info btn-xs">
                                Edit <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a> | <a href="@Url.Action("Details", "AwardType", new { id = item.AwardTypeId })" class="btn btn-success btn-xs">
                                    Details <i class="fa fa-list" aria-hidden="true"></i></a> | <a href="@Url.Action("Delete", "AwardType", new { id = item.AwardTypeId })" class="btn btn-danger btn-xs">
                                        Delete <i class="fa fa-times-circle" aria-hidden="true"></i></a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

