@model IEnumerable<IECAWeb.Models.IECA_AuditOffice>

@{
    ViewBag.Title = "Audit Offices";
}

<div class="row">
    <div class="col-md-12">
        <strong style="font-size:1.7em; padding-left:2px">Case Audit Offices</strong>
    </div>
    
    
</div>
<br />
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12 ">
           <span class="h4">@Html.ActionLink("Add New Office", "Create", null, new { @class = "btn btn-success" })&nbsp;&nbsp;&nbsp;&nbsp;</span> 
           <br /><br />
            <table class="table table-condensed table-hover">
                <tr>
                    <th>
                        Goto Office
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Office_Office.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VisibleFlag)
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width: 100px">
                            <a href="@Url.Action("Index", "Audit", new { id = item.AuditOfficeID }, null)" class="btn btn-warning btn-xs">
                                View Office Audit <span class="fa fa-share"></span></a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Office_Office.Name)
                        </td>
                        <td>
                            @{
                    string approve = (item.VisibleFlag).ToString();
                    if (approve == "True")
                    {
                                <img src="~/Images/Check32x32.png" alt="" class="image_background" />
                    }
                    else
                    {
                                <img src="~/Images/RedX32x32.png" alt="" class="image_background" />
                    }
                   
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", "Office", new { id = item.AuditOfficeID })" class="btn btn-info btn-xs">
                                Edit <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>| <a href="@Url.Action("Details", "Office", new { id = item.AuditOfficeID })" class="btn btn-success btn-xs">
                                    Details <i class="fa fa-list" aria-hidden="true"></i></a>@*| <a href="@Url.Action("Delete", "Office", new { id = item.AuditOfficeID })" class="btn btn-danger btn-xs">
                                        Delete <i class="fa fa-times-circle" aria-hidden="true"></i></a>*@
                        </td>
                    </tr>
                }
            </table>
            <br />
          
        </div>
    </div>
    <div>
   @*<a href="@Url.Action("Audit", "Home")" class="btn btn-warning btn-sm"> Back To Admin <i class="fa fa-share" aria-hidden="true"></i></a>*@
</div>
</div>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}

