
@model IEnumerable<SOPWeb.Models.SOPCurrent>
@{
    ViewBag.Title = "SOP Web";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12" style="padding-bottom: 10px">
            @Html.Raw(@ViewBag.User)
