@{
   
    Layout = "~/Views/Shared/_Alternate.cshtml";
}

@model SOPBusinessLayer.DocHistory

@{
    ViewBag.Title = "Details";
}


<form class="form-horizontal">
<div class="Container">
    <div class="row">
        <div class="col-sm-6">
            <fieldset class="scheduler-border">
                <h5 class="text-warning">
                    SOP Details</h5>
                <br />
                <div class="form-group col-xs-12">
                    <div class="display-label">
                        <strong style="font-size: 1.2em">@Html.DisplayNameFor(model => model.SOP_SOP.Name)</strong>
                    </div>
                    <div class="display-field">
                        <strong class="sop" style="font-size: 1.5em; color: White">@Html.DisplayFor(model => model.SOP_SOP.Name)</strong>
                        	@Html.HiddenFor(model => model.SOP_SOP.Name, new { id = "txtHidden" })
                    </div>
                </div>
                <div class="form-group col-xs-12">
                    <div class="display-label">
                        <strong style="font-size: 1.2em">@Html.DisplayNameFor(model => model.DocInfo)</strong>
                    </div>
                    <div class="display-field">
                        <strong style="font-size: 1.5em; color: White">@Html.DisplayFor(model => model.DocInfo)</strong>
                    </div>
                </div>
                @*<div class="form-group col-xs-12">
                    <div class="display-label">
                        <strong style="font-size: 1.2em">@Html.DisplayNameFor(model => model.DocPath)</strong>
                    </div>
                    <div class="display-field">
                        <strong style="font-size: 1.5em; color: White">@Html.DisplayFor(model => model.DocPath)</strong>
                    </div>
                </div>*@
                <div class="form-group col-xs-12">
                    <div class="display-label">
                        <strong style="font-size: 1.2em">@Html.DisplayNameFor(model => model.StartDate)</strong>
                    </div>
                    <div class="display-field">
                        <strong style="font-size: 1.5em; color: White">@Html.DisplayFor(model => model.StartDate)</strong>
                    </div>
                </div>
                <div class="form-group col-xs-12">
                    <div class="display-label">
                        <strong style="font-size: 1.2em">@Html.DisplayNameFor(model => model.ModifiedDate)</strong>
                    </div>
                    <div class="display-field">
                        <strong style="font-size: 1.5em; color: White">@Html.DisplayFor(model => model.ModifiedDate)</strong>
                    </div>
                </div>
            </fieldset>
            	<a href="@Url.Action("Search", "Home")" class="btn btn-warning btn-sm"> Back To List <i class="fa fa-share" aria-hidden="true"></i></a>
        </div>
        <div class="col-sm-6">
            <iframe src=@Html.DisplayFor(model => model.DocPath) width="500" height="625" ></iframe>
            <div style="text-align: center">
                <br />
                <a href=@Html.DisplayFor(model => model.DocPath) target="_blank" class="btn btn-success btn-sm"> View Full Screen <i class="fa fa-list" aria-hidden="true"></i></a>
                
            </div>
        </div>


    </div>
</div>
</form>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {

            var link = $('#txtHidden').val();
            var page = "Search";
            $.ajax({
                type: 'get',
                url: '@Url.Action("updateStats")',
                data: { "link": link, "page": page },
                success: function (result) {

                }
            });
        });                
    </script>
}
