@model IEnumerable<SOPBusinessLayer.SOP>

@{
    ViewBag.Title = "Index";
}

<div style="padding-left:30px">
    <h4>SOP's </h4>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-12 ">
            <span class="h6">@Html.ActionLink("Create New", "Create")&nbsp;&nbsp;|&nbsp;&nbsp;</span><span
                class="h6">@Html.ActionLink("Admin", "Admin", "Home")</span>
            <table class="table table-condensed table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Office_Bureau.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ModifiedDate)
                    </th>
                    <th>
                    </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Office_Bureau.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ModifiedDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.SOPID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.SOPID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.SOPID })
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
