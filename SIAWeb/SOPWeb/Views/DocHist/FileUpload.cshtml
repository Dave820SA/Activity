

@{
    ViewBag.Title = "FileUpload";
    Layout = "~/Views/Shared/_Alternate.cshtml";
}

<div style="padding-left: 60px">
    <h4>
        Upload <small>New File</small></h4>
</div>

@using (Html.BeginForm("FileUpload", "DocHist", FormMethod.Post, new { @encType = "multipart/Form-data" }))
 {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <form class="form-horizontal">
    <div class="Container">
        <div class="row">
            <div class="col-lg-6 col-lg-offset-1 col-md-6 col-sm-6 col-xs-12">
                <fieldset class="scheduler-border">
                    <div class="form-group col-xs-11 col-md-8">
                        @Html.TextBox("file", "", new { type = "file", @class = "form-control"})
                        @Html.ValidationMessage("file", "Please enter student name.", new { @class = "text-danger" })
                        <br />
                        <input type="submit" class="btn btn-primary" value="Upload" />
                    </div>
                </fieldset>
                <br />
                <div>
                    @Html.ActionLink("Back to List", "Index")
                </div>
            </div>
        </div>
    </div>
    </form>

