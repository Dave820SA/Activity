@model PersonnelBusinessLayer.GroupTitle

@{
    ViewBag.Title = "Create";
}

<div style="padding-left: 5px">
    <h3>
        Create <small>New Group</small></h3>
</div>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
  <form class="form-horizontal" action="Create">
    <div class="Container">
        <div class="row">
            <div class="col-sm-6">
                <fieldset class="scheduler-border">
                    
                    <div class="form-group col-xs-12">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.Name)
                        </div>
                        <div class="editor-label">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @style = "text-transform:uppercase" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <div class="editor-label">
                            @Html.LabelFor(model => model.GroupInfo)
                        </div>
                        <div class="editor-label">
                            @Html.TextAreaFor(model => model.GroupInfo, new { @class = "form-control", cols = "20", rows = "7" })
                        </div>
                    </div>
					<div class="form-group col-xs-12">
                        <strong style="font-size:1.2em">@Html.LabelFor(model => model.VisibleFlag, new { @class = "control-label" })</strong>
                        @Html.CheckBoxFor(model => model.VisibleFlag, htmlAttributes: new { @checked = true})
                        
                    </div>

                    <div class="form-group col-xs-12">
                        <input type="submit" class="btn btn-primary" value="Create" />
                    </div>
                </fieldset>

                 <div>
                    <strong style="font-size: 1.2em">| @Html.ActionLink("Back to List", "Index")</strong>
                </div>
            </div>
        </div>
    </div>
    </form>
   
}

@section Scripts {

   <script type="text/javascript">
       $(document).ready(function () {

       });
    </script>

}

