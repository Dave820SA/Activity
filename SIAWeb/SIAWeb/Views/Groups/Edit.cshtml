@model PersonnelBusinessLayer.GroupTitle

@{
    ViewBag.Title = "Edit Contact Group";
}

<div style="padding-left: 5px">
    <h3>
        Edit<small> Contact Group</small></h3>
</div>
<hr />
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <form class="form-horizontal">
    <div class="Container">
        <div class="row">
            <div class="col-sm-6">
                <fieldset class="scheduler-border">
                    
                    @Html.HiddenFor(model => model.GroupTitleID)
                    <div class="form-group col-xs-12">
                        <strong style="font-size: 1.2em">@Html.LabelFor(model => model.Name, new { @class = "control-label" })</strong>
                        <div>
                             @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                     <div class="form-group col-xs-12">
                         <strong style="font-size:1.2em">@Html.LabelFor(model => model.GroupInfo, new { @class = "control-label" })</strong>
                         <span style="font-size:.7em; color:Yellow; font-style:italic; padding-left:10px">Limited to 150 characters</span>
                        @Html.TextAreaFor(model => model.GroupInfo, new { @class = "form-control", cols = "20", rows = "7", id = "GroupMemo" })
                    </div>
                     <div class="form-group col-xs-12">
                         <strong style="font-size: 1.2em">@Html.LabelFor(model => model.VisibleFlag, new { @class = "control-label" })</strong>
                        @Html.CheckBoxFor(model => model.VisibleFlag, new { @class = "form-control" })
                        
                    </div>
                     <div class="form-group col-xs-12">
                        <input type="submit" class="btn btn-primary" value="Submit" />
                    </div>
                </fieldset>
                <br />
                <div>
                    <strong style="font-size: 1.2em">@Html.ActionLink("Back to List", "Index")</strong>
                </div>
            </div>
        </div>
    </div>
    </form> 
}     
 
@section Scripts {

   <script type="text/javascript">
       $(document).ready(function () {
        });

       $('#GroupMemo').keypress(function () {
           if (this.value.length >= 150)
               return false;
       });
       
    </script>
	}







