@{ 
    Layout = "~/Views/Shared/_Alternate2.cshtml";
}
@model IEnumerable<SIAWeb.Models.People>

@{
    ViewBag.Title = "Person Search";
    
}

<div class="row">
    <div class="col-md-7">
        <strong style="font-size:1.7em; padding-left:2px">Person Search by Name, Badge or SAP</strong>
    </div>
    <div class="col-md-5">

        @using (Html.BeginForm("Index", "PersonSearch", FormMethod.Get, new { encType = "multipart/form-data", id = "myform", name = "myform" }))
        {
           <div class="input-group">
                @Html.TextBox("search_string", null, new { @class = "form-control" })
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit" id="process" value="process">
                        @*<span class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></span>*@
                        @*<i class="fa fa-spinner fa-spin" style="font-size:24px"></i>*@
                        <i class="fa fa-search"></i>
                        
                    </button>
                </div>
            </div>
        }
        
    </div>
</div>  

<div id="loading">
    <div id="loadingcontent">
        <p id="loadingspinner">
            Searching things...
        </p>
    </div>
</div>

@*<div id="spinner">
    <img src="@Url.Content("~/Images/ajax-loader.gif")" alt="Please wait...">
</div>*@

  @*We want to show this while the server process is running:*@
@*<div id="divProcessing">
    <p>Processing, please wait . . . <img src="../../Images/ajax-loader.gif"></p>
</div>*@   

<br />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            @{
                if (Model != null)
                {
                <table class="table table-condensed table-hover">
                    <tr>
                         <th>
                          
                            Title
                        </th>
                        <th>
                          
                            Name
                        </th>
                       
                        <th>
                            @Html.DisplayNameFor(model => model.SAP)
                        </th>
                      
                        <th>
                            Office
                        </th>

                        <th>
                            Status
                        </th>
                      
                        <th>
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(model => item.AppEntityID)
                                @{
                                   
                                string title = string.Format(" - {0}", item.RankCode);   
                                int rank = (item.jtRanking);
                                    if (rank <= 6)
                                        {
                                           
                                        <img src="~/Images/SupervisorBadgeIcon.png" alt="" class="image_background" /> @Html.Raw(title.ToUpper())  
                                        }
                                    else if (rank >= 7 && rank <= 11)
                                    {
                                         <img src="~/Images/OfficerBadgeIcon.png" alt="" class="image_background" /> @Html.Raw(title.ToUpper())  
                                    }
                                    else
                                    {
                                       <img src="~/Images/SAPD-Patch.png" alt="" class="image_background" /> @Html.Raw(title.ToUpper())
                                    }
                              }


                               @* @Html.DisplayFor(modelItem => item.RankCode)*@
                            </td>
                            <td>
                            @{
                                    if (!String.IsNullOrEmpty(item.Badge))
                                    {
                                        string person = string.Format("{0} {1} #{2}", item.First, item.Last, item.Badge);
                                    @Html.Raw(person.ToUpper())
                                    }
                                    else
                                    {
                                        string person = string.Format("{0} {1}", item.First, item.Last);
                                    @Html.Raw(person.ToUpper())
                                    }
                                    
                               
                                }
                               
                            </td>
                          
                            <td>
                                @Html.DisplayFor(modelItem => item.SAP)
                            </td>
                           
                            <td>
                                @{
                                    if (!String.IsNullOrEmpty(item.Badge))
                                    {
                                        string office = string.Format("{0} - {1}", item.Office, item.OfficeCode);
                                    @Html.Raw(office.ToUpper())
                                    }
                             
                                }
                                
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                          
                            <td>
                                <a href="@Url.Action("SelectedPerson", "PersonSearch", new { id = item.AppEntityID })" class="btn btn-success btn-sm"> View <i class="fa fa-list" aria-hidden="true"></i></a>
                                @*@Html.ActionLink("SelectedPerson", "View", new { appEntity = item.AppEntityID }) *@
                            </td>
                        </tr>
    
                    }
                </table>
                }

                if (Model == null)
                {
                <p>
                    No employees match your serach</p>
            }
             
            }
        </div>
    </div>
</div>



@section Scripts {
    

    <script type="text/javascript">

        $(function () {
            $("#process").click(function () {
                $("#loading").fadeIn();
            });
        });



    </script>

    
}
