        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @RenderBody()
                <hr />
            </div>
        </div>
    </div>
    <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="text-center">&copy; @DateTime.Now.Year - Activity App - Created by: D.Davidson#1341</p>
                </div>
            </div>
      </footer>

        @*@Scripts.Render("~/bundles/googlejs")*@
        @Scripts.Render("~/bundles/jquery")
