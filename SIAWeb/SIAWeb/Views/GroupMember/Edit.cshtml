@model PersonnelBusinessLayer.GroupMember

<div style="padding-left: 5px">
    <h3>
        Edit<small> Group Member</small></h3>
</div>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <form class="form-horizontal" action="Edit">
    <div class="Container">
        <div class="row">
            <div class="col-sm-6">
                <fieldset class="scheduler-border">
                    
                    @Html.HiddenFor(model => model.GroupMemberID)
                    @Html.HiddenFor(model => model.AppEntityID)
                    @Html.HiddenFor(model => model.GroupTitleID)
                    @Html.HiddenFor(model => model.ModifiedDate)
                    <div class="form-group col-xs-12">
                        <div class="display-label">
                            <strong style="font-size: 1.2em">@Html.DisplayNameFor(model => model.User_GroupTitle.Name)</strong>
                        </div>
                        <div class="display-field">
                            @{
                                int _groupTitleID = Model.GroupTitleID;
                                <a href="@Url.Action("Details", "Groups", new { id = _groupTitleID }, null)" title="office" >
                                    <strong style="font-size: 1.5em; color: #2A9FD6; text-decoration: underline;">@Html.DisplayFor(model => model.User_GroupTitle.Name)</strong>
                                </a> 
                            }
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <strong style="font-size: 1.2em">@Html.LabelFor(model => model.AppEntityID, new { @class = "control-label" })</strong>
                        <div>
                            <div class="display-field">
                                @{
                                    string _member = Model.User_User.Person_Person.FirstName + " " + Model.User_User.Person_Person.LastName;

                                    <strong style="font-size: 1.5em; color: White">@Html.Raw(_member)</strong>
                                }
                            </div>
                           
                        </div>
                    </div>

                     <div class="form-group col-xs-12">
                         <strong style="font-size:1.2em">@Html.LabelFor(model => model.MemberInfo, new { @class = "control-label" })</strong>
                        @Html.TextAreaFor(model => model.MemberInfo, new { @class = "form-control", cols = "20", rows = "7" })
                        
                    </div>
                     <div class="form-group col-xs-12">
                         <strong style="font-size: 1.2em">@Html.LabelFor(model => model.VisibleFlag, new { @class = "control-label" })</strong>
                         @Html.CheckBoxFor(model => model.VisibleFlag)
                        
                    </div>
                     <div class="form-group col-xs-12">
                        <input type="submit" class="btn btn-primary" value="Submit" />
                    </div>
                </fieldset>
                <br />
                <div>
                    <strong style="font-size: 1.2em">@Html.ActionLink("Back to List", "Details", "Groups", new { id=Model.GroupTitleID }, null)</strong>
                    
                </div>
            </div>
        </div>
    </div>
    </form> 
} 

@section Scripts {

   <script type="text/javascript">
       $(document).ready(function () {

       });
    </script>
	}

