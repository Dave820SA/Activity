@model PersonnelBusinessLayer.GroupMember

@{
    ViewBag.Title = "Details";
}

<div style="padding-left: 5px">
    <h3>
        <span style="color:#2A9FD6">Group</span><small> Member</small></h3>
</div>
<form class="form-horizontal" action="Details" >
<div class="Container">
    <div class="row">
        <div class="col-sm-6">
            <fieldset class="scheduler-border">
               
                @*@Html.HiddenFor(model => model.GroupTitleID)*@
                <div class="form-group col-xs-12">
                    <div class="display-label">
                        <strong style="font-size: 1.2em">@Html.DisplayNameFor(model => model.User_GroupTitle.Name)</strong>
                    </div>
                    <div class="display-field">
                        @{
                            int _groupTitleID = Model.GroupTitleID;
                            <a href="@Url.Action("Details", "Groups", new { id = _groupTitleID }, null)" title="office" >
                                <strong style="font-size: 1.5em; color: #2A9FD6; text-decoration: underline;">@Html.DisplayFor(model => model.User_GroupTitle.Name)</strong>
                            </a> 
                        }
                       
                    </div>
                </div>
                <div class="form-group col-xs-12">
                    <div class="display-label">
                        <strong style="font-size: 1.2em">@Html.DisplayNameFor(model => model.AppEntityID)</strong>
                    </div>
                    <div class="display-field">
                         @{
                            string _member = Model.User_User.Person_Person.FirstName + " " + Model.User_User.Person_Person.LastName;

                        <strong style="font-size: 1.5em; color: White">@Html.Raw(_member)</strong>
                        }
                    </div>
                        
                </div>
                <div class="form-group col-xs-12">
                    <div class="display-label">
                        <strong style="font-size: 1.2em">@Html.DisplayNameFor(model => model.MemberInfo)</strong>
                    </div>
                    <div class="display-field">
                        <strong style="font-size: 1.5em; color: White">@Html.DisplayFor(model => model.MemberInfo)</strong>
                    </div>
                </div>
                <div class="form-group col-xs-12">
                    <div class="display-label">
                        <strong style="font-size: 1.2em">@Html.DisplayNameFor(model => model.VisibleFlag)</strong>
                    </div>
                    <div class="display-field">
                        <strong style="font-size: 1.5em; color: White">@Html.DisplayFor(model => model.VisibleFlag)</strong>
                    </div>
                </div>
                <div class="form-group col-xs-12">
                </div>
                <div class="form-group col-xs-12">
                    <strong style="font-size: 1.2em">@Html.ActionLink("Edit", "Edit", new { id = Model.GroupMemberID })
                        |</strong> <strong style="font-size: 1.2em">@Html.ActionLink("Back to List", "Index")</strong>
                </div>
            </fieldset>
        </div>
    </div>
</div>
</form>






